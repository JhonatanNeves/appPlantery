<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linear_layout_button_ranked"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="0dp"
        android:padding="35dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_button_ranked"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/background_menu_friend_fragment_ranked"
            android:padding="11dp"
            android:src="@drawable/usuariowhite96" />

        <TextView
            android:id="@+id/txt_butom_rankd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/rank" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>